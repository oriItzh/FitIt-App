<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.ArchitectureProject" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
<!--        <item name="android:fontFamily">@font/shortbaby</item>-->
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
    </style>

    <style name="black_button_theme" parent="Theme.ArchitectureProject">
        <item name="android:textStyle">bold</item>
        <item name="strokeColor">@color/white</item>
        <item name="strokeWidth">3dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="fontFamily">@font/lato</item>
        <item name="backgroundTint">@color/black</item>
        <item name="cornerRadius">10dp</item>
        <item name="iconTint">@color/white</item>
    </style>

    <style name="blue_button_theme" parent="Theme.ArchitectureProject">
        <item name="android:textStyle">bold</item>
        <item name="strokeColor">@color/white</item>
        <item name="strokeWidth">3dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="fontFamily">@font/lato</item>
        <item name="backgroundTint">@color/navy_blue</item>
        <item name="iconTint">@color/white</item>
    </style>

    <style name="text_input_dark_theme" parent="Theme.ArchitectureProject">
        <item name="android:textColorHint">@color/white</item>
        <item name="strokeColor">@color/black</item>
        <item name="strokeWidth">2dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="fontFamily">@font/lato</item>
        <item name="android:background">@color/transparent</item>

    </style>

    <style name="red_button_theme" parent="Theme.ArchitectureProject">
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
        <item name="strokeColor">@color/white</item>
        <item name="strokeWidth">2dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="fontFamily">@font/lato</item>
        <item name="backgroundTint">@color/navy_blue</item>
        <item name="cornerRadius">10dp</item>
        <item name="iconTint">@color/white</item>
    </style>


   <style name="Theme.ArchitectureProject" parent="Base.Theme.ArchitectureProject" />
</resources>